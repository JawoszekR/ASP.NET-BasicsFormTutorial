@model Vidly2.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @*@Html.LabelFor(m => m.Name)*@
        <label for=@nameof(Model.Movie.Name)>Name of Customer</label>
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReliseDate, "Relise Date")
        @Html.TextBoxFor(m => m.Movie.ReliseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreID, "Membership Type")
        @Html.DropDownListFor(m => m.Movie.GenreID, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock, "Number in stock")
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}